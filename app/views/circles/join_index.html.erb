
<div class="circle_left">
  <div class=" main circles-index">
    <div class="container">
      <h1 class="circles-heading">所属Circle一覧</h1>
      
      <!-- 以下の<% %>を使ってeach文を追加してください -->
      <% @circle_register.each do |circle_register|  %>
          <% @circle = Circle.find_by(id: circle_register.circle_id) %>
            <div class="circles-index-item">
              <div class="circles-left">
                <img src="<%= "/circle_images/#{@circle.image_name}" %>">
              </div>
              <div class="circles-right">
              <%= link_to(@circle.name, "/circles/#{@circle.id}") %>
                <!-- 以下の<%= %>を使ってユーザー名を表示してください -->
                <%if @current_circle.id == @circle.id%>
                  <p>所属中</p>
                <%else%>
                <p>
                  <%= link_to("切り替える", "/circles/#{@circle.id}/change_circle",{method: "post"}) %>
                </p>
                <%end%>
              </div>
            </div>
            
        <!-- 以下の<% %>を使ってeach文のendを追加してください -->
            
        <% end %>
    </div>
  </div>
</div>
