<div class="main books-edit">
  <div class="container">
    <div class="form-heading">蔵書の編集</div>
    <div class="form books-form">
      <div class="form-body">
        <%= form_tag("/books/#{@current_circle.id}/#{@book.id}/update",{multipart: true}) do %>
            <p>本の名前</p>
            <!-- nameを初期値として表示してください -->
            <input name="name" value="<%= @book.name %>">
            <p>画像</p>
            <input name="image" type="file">
            <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>