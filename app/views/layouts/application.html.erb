<!DOCTYPE html>
<html>
  <head>
    <title>Book-ShARelf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
  <!-- ここにヘッダーを書いてください -->
  <header>
      <div class="header-logo">
        <!-- 以下の1行を削除し、指定されたHTMLを貼り付けてください -->
        <% if @current_user && @current_circle%>
          <%= link_to("Book-ShARelf", "/posts/index") %>
        <% else %>
          <%= link_to("Book-ShARelf", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user && @current_circle%>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_circle.id}/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("所属Circle","/circles/#{@current_circle.id}/#{@current_user.id}/join_index") %>
          </li>
          <li>
            <%= link_to("Circle一覧","/circles/#{@current_circle.id}/index") %>
          </li>
          <li>
            <%= link_to("Circle新規作成", "/circles/new") %>
          </li>
          <li>
            <%= link_to("蔵書一覧", "/books/#{@current_circle.id}/index") %>
          </li>
          <li>
          <%= link_to("蔵書登録", "/books/#{@current_circle.id}/books_signup") %>
          </li>
          <li>
            <%= link_to("投稿一覧", "/posts/#{@current_circle.id}/index") %>
          </li>
          <li>
            <%= link_to("新規投稿", "/posts/#{@current_circle.id}/new") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/users/#{@current_circle.id}/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method: :post}) %>
          </li>
        <% else %>
          
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <body>
   
    </body>

  <% if flash[:notice] %>
      <div class="flash">
        
        <%=flash[:notice] %>
      </div>
    <% end %>
  <!-- 各ビューファイルは以下のyieldに代入され、application.html.erbの一部となる -->
    <%= yield %>
  </body>
</html>
